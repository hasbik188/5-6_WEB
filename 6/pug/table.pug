        input(type="button" value="Сортировать")
        input(type="reset" value="Сбросить настройки")

mixin FILL_TABLE(list)
    each item in list 
        tr 
            td=item.city
            td=item.temp
            td=item.hum
            td=item.atmo
            td=item.pre
mixin CREATE_TABLE(list)
    table   
        thead   
            tr 
                th= 'Город' 
                th= 'Температура, °С'
                th= 'Влажность, %'
                th= 'Атмосферное давление, мм'
                th= 'Осадки'        
        tbody 
            +FILL_TABLE(list) 

mixin createDetails()
    div.content-graph
        details
            summary='График'
            +createGraphSection
    div.content-filter
        details
            summary='Фильтр'
            +createFilterSection
    div.content-sort 
        details
            summary='Сортировка'   
            +createSortingSection
    div.content-tab        
        +CREATE_TABLE(list)
    

block main_content
    +createDetails()






