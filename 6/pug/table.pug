//- Миксин для раздела График
mixin createGraphSection
    form

        div.content__graph
            div.text='Значение OX:'
            input(type="radio" name="graph" id="city" value="city")
            label(for="city")='Города'
            br
            
        div.container
            div.result
                label(for='maxtemp')='Максимальная температура'
                input(type="checkbox" name="graph" id="maxtemp" value="maxtemp") 
            div.result
                label(for="mintemp")='Минимальная температура'
                input(type="checkbox" name="graph" id="mintemp" value="mintemp") 
            div.result
                label(for="maxhum")= 'Максимальная влажность'
                input(type="checkbox" name="graph" id="maxhum" value="maxhum")
            div.result
                label(for="minhum")= 'Минимальная влажность'
                input(type="checkbox" name="graph" id="minhum" value="minhum") 
            div.result
                label(for="maxpres")= 'Максимальное атмосферное давление'
                input(type="checkbox" name="graph" id="maxpres" value="maxpres") 
            div.result
                label(for="minpres")= 'Минимальное атмосферное давление'
                input(type="checkbox" name="graph" id="minpres" value="minpres") 
        div.container
            input(type="button" value="Построить")
            input(type="reset" value="Сбросить настройки")

//- Миксин для раздела Фильтр
mixin createFilterSection
    form
        div.content__filter__block
            label(for="city")= 'Город:' 
            input(type="text" id="city")

        div.content__filter__block
            label(for="temperature")= 'Температура:' 
            input(type="number" id="temperature" min="-18" max="19")

        div.content__filter__block
            label(for="humidity")= 'Влажность:' 
            input(type="number" id="humidity" min="0" max="100")

        div.content__filter__block
            label(for="pressure")= 'Атмосферное давление:' 
            input(type="number" id="pressure" min="700" max="763")

        div.content__filter__block
            label(for="precipitation")= 'Осадки:' 
            input(type="number" id="precipitation" min="1" max="9")

        div.content__filter__block
            input(type="button" value="Найти")
            input(type="reset" value="Сбросить фильтр")

//- Миксин для раздела Сортировка
